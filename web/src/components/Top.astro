---
import TextReveal from './TextReveal.svelte'
import { MyProfileArea } from './profile/'

import LogoReveal from './LogoReveal.svelte'
import Activities from './Activities.astro'
import Experience from './Experience.astro'
import Skill from './Skill.astro'
---

<main>
  {process.env.NODE_ENV !== 'development' && <LogoReveal client:load/>}
    
  <div class="flex flex-col lg:flex-row items-center lg:items-start">
    <div class="flex-1">
      <p><TextReveal client:load text="Thank you for visiting our site. It is currently under development. Please check back soon for updates." duration="3000"/></p>
      <p><TextReveal client:load text="サイトを見つけてくれてありがとうございます。このサイトは現在開発中のため、もう少し経ってから再度見に来てください。" duration="3000"/></p>
    </div>
    <div class="p-4 pt-12">
      <MyProfileArea client:load/>
    </div>
  </div>
  <Experience />
  <Skill />
  <Activities />
</main>
