---
import Layout from '../layouts/Layout.astro'
import ProfileArea from '../components/ProfileArea.astro'
import Experience from '../components/Experience.astro'
import Skill from '../components/Skill.astro'
import Activities from '../components/Activities.astro'
---

<Layout title="Maaaashi's Website">
  <main>
    <div class='fixed -z-10 top-16 left-1/2 -translate-x-1/2 w-max'>
      <img class='h-screen object-cover' src='/top_no_gazou.png' alt='' />
    </div>
    <div class='w-full h-screen relative'>
      <span
        class='mb-4 text-3xl font-extrabold text-gray-400 dark:text-white md:text-5xl lg:text-6xl left-12 top-1/2 -translate-y-12 absolute'
      >
        This is
        <span
          class='text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400'
          >Maaaashi's Website</span
        > .
      </span>
    </div>
    <div class='bg-base-100'>
      <div class='flex flex-col lg:flex-row items-center lg:items-start'>
        <div class='p-4 pt-12'>
          <ProfileArea />
        </div>
      </div>
      <Experience />
      <Skill />
      <Activities />
    </div>
  </main>
</Layout>
