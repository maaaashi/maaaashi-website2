---
import '../global.css'
import Header from '../components/Header.tsx'
import '@fontsource/zen-kaku-gothic-new'

interface Props {
  title: string
}

const { title } = Astro.props

const canonicalURL = new URL(
  Astro.url.pathname,
  'https://maaaashi-website2.mss-rep.com',
)
const ogpImageURL = new URL('/ogp.png', 'https://maaaashi-website2.mss-rep.com')
---

<!doctype html>
<html lang='ja' data-theme='light'>
  <head>
    <link rel='canonical' href={canonicalURL} />
    <meta property='og:image' content={ogpImageURL} />
    <meta charset='UTF-8' />
    <meta name='description' content={"This is Maaaashi's Website"} />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.ico' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class='bg-base-50 h-screen overflow-hidden flex flex-col'>
    <Header client:load />
    <div class='flex-1 overflow-y-auto'>
      <slot />
    </div>
  </body>

  <style>
    * {
      font-family: 'Zen Kaku Gothic New', sans-serif;
    }
  </style>
</html>
